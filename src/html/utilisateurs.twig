{% extends "creationcompte.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block menu %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="pro_container">
        {% if users is empty %}
            <p class="white-text">Aucun utilisateur trouv√©.</p>
        {% else %}
            {% for user in users %}
                <div class="box_products white-box">
                    <div class="des white-text">
                        <h5 class="titre_utilisateur">{{ user['nom'] }} {{ user['prenom'] }}</h5>
                        <p class="white-text">Email: {{ user['mail'] }}</p>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}



