{% extends "creationcompte.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block menu %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="pro_container">
            {% for utilisateur in utilisateurs %}
                <div class="box_products white-box">
                    <div class="des white-text">
                        <h5 class="titre_utilisateur">{{ utilisateur['nom'] }} {{ utilisateur['prenom'] }}</h5>
                        <p class="white-text">Email: {{ utilisateur['mail'] }}</p>
                        <p class="white-text">Est professeur: {% if utilisateur['est_professeur'] %}Oui{% else %}Non{% endif %}</p>
                        <p class="white-text">Tag NFC: {{ utilisateur['tag_nfc'] }}</p>
                        <p class="white-text">Salles associ√©es:</p>
                        <ul>
                            {% for salle in utilisateur['salle'] %}
                            <li>{{ salle['numero'] }} ({{ salle['code'] }})</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endfor %}
    </div>
{% endblock %}



